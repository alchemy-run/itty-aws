{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules"],
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "types": ["@types/node"],
    "typeRoots": ["node_modules/@types"]
  }
}
